              "items": [
                { "name": "특성 임피던스", "latex": "Z_0 = \\sqrt{L'/C'}" },
                { "name": "동축 케이블", "latex": "Z_0 = \\frac{60}{\\sqrt{\\varepsilon_r}}\\ln\\frac{b}{a}" },
                { "name": "반사 계수", "latex": "\\Gamma = \\frac{Z_L - Z_0}{Z_L + Z_0}" },
                { "name": "VSWR", "latex": "\\text{VSWR} = \\frac{1+|\\Gamma|}{1-|\\Gamma|}" }
              ]
            }
